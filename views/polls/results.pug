extends ../layout

block content
  .container.mt-4
    .row.justify-content-center
      .col-sm-6
        .card
          .card-header
            h4.card-title= poll.title
            p= poll.description
          .card-body
            each option, i in poll.options
              .progress
                .progress-bar.progress-bar-animated.progress-bar-striped(role="progressbar" style="width: " + poll.votesPercentage(i) + "%;" aria-valuenow= poll.votesPercentage(i) aria-valuemin="0" aria-valuemax="100")= poll.votesPercentage(i) + '%'  
              p.card-title= option.name
